<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Content:</strong>
  <%= @recipe.content %>
</p>


<h5>Add Comment</h5>
<%= form_for @comment do |f| %>
  <input type="hidden" name="comment[recipe_id]" value="<%=@recipe.id%>">
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>

<h5>Comments</h5>
<% @recipe.comments.each do |comment| %>
  <p class="comment">
    <%= comment.content %> <sub>by <%=comment.user.email%></sub>
  </p>
<% end %>


<% if @recipe.user == current_user %>
  <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<% end %>
<%= link_to 'Back', recipes_path %>
